{%- set absolutePageUrl -%}
  {{- page.url | htmlBaseUrl(site.url) -}}
{%- endset -%}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preload" href="{{ env.baseUrl }}css/page.css" as="style">
<!-- PRELOAD CDN SCRIPTS -->
<link rel="preconnect" href="https://unpkg.com/popper.js@1" as="script">
<link rel="preconnect" href="https://unpkg.com/tippy.js@4" as="script">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="description" content="{{ description or site.description }}">
<meta name="author" content="{{ site.author }}">
<meta name="robots" content="index,follow">
<!-- BEGIN SOCIAL META DATA -->
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ title or site.title }}">
<meta property="og:description" content="{{ description  or site.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
{%- if image -%}
  <meta property="og:image" content="{{ image | url | htmlBaseUrl(site.url) }}">
{%- endif -%}
<!-- ./END SOCIAL META DATA -->
<meta name="theme-color" content="#ffffff">
<link rel="apple-touch-icon" sizes="180x180" href="{{ env.baseUrl }}img/favicon/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="{{ env.baseUrl }}img/favicon/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="{{ env.baseUrl }}img/favicon/favicon-16x16.png">
<link rel="manifest" href="{{ env.baseUrl }}img/favicon/site.webmanifest">
<title>{{ title or site.title }}</title>
<link rel="stylesheet" href="{{ env.baseUrl }}css/page.css">
{% if not isFront %}
  <!-- include Normalize for regular text pages -->
  <link rel="stylesheet"  href="{{ env.baseUrl }}css/normalize.min.css">
{% endif %}
{# Google Analytics (GA4) - load only in non-dev and when ID present #}
{% if not env.isDev and env.analyticsId %}
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ env.analyticsId }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '{{ env.analyticsId }}');
  </script>
{% endif %}